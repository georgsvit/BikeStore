@model IEnumerable<BikeStore.Models.Domain.ModelColour>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


@if (Model.Count() == 0)
{
    <h3>There are no model colour schemes for specified model. <a asp-action="Create" asp-route-modelId="@ViewBag.ModelId">Create?</a></h3>
}
else
{
<p>
    <a asp-action="Create" asp-route-modelId="@ViewBag.ModelId">Create New</a>
    <a asp-action="Details" asp-controller="Models" asp-route-id="@ViewBag.ModelId">Go to model</a>
</p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ImageLink)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Colour)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ImageLink"  />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Colour.ColourValue)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}